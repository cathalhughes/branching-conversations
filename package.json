{
  "name": "react-nestjs-app",
  "version": "1.0.0",
  "description": "A full-stack application with React frontend and NestJS backend",
  "scripts": {
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\"",
    "client:dev": "cd client && npm start",
    "server:dev": "cd server && npm run start:dev",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "start": "concurrently \"npm run client:start\" \"npm run server:start\"",
    "client:start": "cd client && npm start",
    "server:start": "cd server && npm run start:prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@nestjs/schedule": "^6.0.0"
  }
}
